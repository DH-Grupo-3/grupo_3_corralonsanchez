<html lang="en">
	<head>
		<%- include('./partials/head') %>
	</head>
	<body>
		<!-- header -->
		<%- include('./partials/header') %>
        <main>
            <form class="product-form">
                <h3>Formulario de carga y edicion de productos</h3>
                <label for="name">Nombre:</label>
                <input type="text" id="name" name="product-name">
                <label for="description">Caracteristicas:</label>
                <textarea name="product-description" id="description" cols="30" rows="10"></textarea>
                <label for="">Imagen:</label>
                <input type="file" name="product-image" accept=".jpg, .png, .tiff">
                <label for="category">Categoria:</label>
                <select name="category" id="category">
                    <option value="category 1">Categoria 1</option>
                    <option value="category 2">Categoria 2</option>
                    <option value="category 3">Categoria 3</option>
                    <option value="category 4">Categoria 4</option>
                    <option value="category 5">Categoria 5</option>
                </select>
                <label for="price">Precio:</label>
                <input type="number" id="price" name="product-price">
                <label>Â¿Esta en oferta?</label>
                <input type="radio" name="ofert" value="si">Si
                <input type="radio" name="ofert" value="no">No

                <input type="submit" value="crear/editar producto">
            </form>
        </main>
    </body>
</html>