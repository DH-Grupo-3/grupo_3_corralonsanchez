<html lang="en">
	<head>
		<%- include('./partials/head') %>
	</head>
	<body class="body_registro">
		<!-- header -->
		<%- include('./partials/header') %>
		<main>
			<section>
				<form class="formulario_login">
					<fieldset>
						<legend>Login</legend>
						<!-- <div class="contenedor-campos-login"> -->
							<div class="campo">
								<label for="email">Correo</label>
								<input
									class="input-text"
									type="email"
									id="email"
									placeholder="Email"
								/>
							</div>
							
							<div class="campo">
								<label for="pass">Contraseña</label>
								<input
									class="input-text"
									type="password"
									id="pass"
									placeholder="Contraseña"
								/>
							</div>
							<div class="recuperar_pass">								
								<a href="#"><small class="letra_primario">¿Olvidaste tu contraseña?</small></a>
							</div>
							
							<div class="recuperar_pass">
								<a href="#"><small class="letra_primario">No tiene una cuenta? Registrarse></small></a>
							</div>
						
						<!-- .contenedor-campos -->
						<!-- <div class="alinear-derecha flex"> -->
							<button class="boton w-sm-100" type="button" value="Iniciar Sesión">Iniciar Sesión</button>
						<!-- </div> -->
					</fieldset>
				</form>
			</section>
		</main>
	</body>
</html>
