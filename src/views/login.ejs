<html lang="en">
	<head>
		<%- include('./partials/head') %>
		<link rel="stylesheet" href="css/login.css" />
	</head>
	<body class="body_login">
		<!-- header -->
		<%- include('./partials/header') %>
		<main>
			<section>
				<form class="formulario_login">
					<fieldset>
						<legend>Login</legend>
						<div class="contenedor-campos-login">
							<div class="campo">
								<label for="email">Correo</label>
								<input
									class="input-text"
									type="email"
									id="email"
									placeholder="Email"
								/>
							</div>
							<div class="recuperar_pass">
								<small class="letra_primario">¿Olvidaste tu contraseña?</small>
								<a href="#"><small class="letra_gris">Recuperarla</small></a>
							</div>
							<div class="campo">
								<label for="pass">Contraseña</label>
								<input
									class="input-text"
									type="password"
									id="pass"
									placeholder="Contraseña"
								/>
							</div>
							<div class="recuperar_pass">
								<small class="letra_primario">No tiene una cuenta?</small>
								<a href="#"><small class="letra_primario">Registrarse></small></a>
							</div>
						</div> <!-- .contenedor-campos -->
						<div class="alinear-derecha flex">
							<input class="boton w-sm-100" type="submit" value="Iniciar Sesión" />
						</div>
					</fieldset>
				</form>
			</section>
		</main>
	</body>
</html>
