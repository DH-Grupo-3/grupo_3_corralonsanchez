<html lang="es">
	<head>
		<%- include('../partials/head') %>
	</head>

	<body>
		<!-- header -->
		<%- include('../partials/header') %>
		<main>
			<h2>Productos</h2>

			<section class="destacados">
				<% if (products.length > 0) { %> <% products.forEach(product => { %>
				<article class="destacados__contenedor productos">
					<img
						class="imagen_producto"
						src="<%= product.image %>"
						alt="producto"
					/>
					<h3><%= product.name %></h3>
					<p class="precio">Precio: $ <%= product.price %></p>
					<p class="descrip"><%= product.description %></p>
					<nav>
						<a class="boton_editar" href="/products/<%= product.id %>/edit">Editar</a>
					</nav>
					<form class="eliminar" action="/products/<%= product.id %>?m=DELETE" method="post">
						<input type="hidden" name="id" value="<%= product.id %>" />
						<button class="boton_eliminar" type="submit">Eliminar</button>
					</form>
				</article>
				<% }) %> <% } %>
			</section>
			<!-- Destacados -->
		</main>
		<!-- footer -->
		<%- include('../partials/footer') %>
	</body>
</html>
