<html lang="en">
	<head>
		<%- include('./partials/head') %>
		<link rel="stylesheet" href="/css/register.css" />
	</head>
	<body class="body_registro">
		<!-- header -->
		<%- include('./partials/header') %>
		<main>
			<!-- <section> -->
			<form class="formulario" method="POST" action="/users/register">
				<legend>Formulario de Registro</legend>
				<section class="contenedor-campos">
					<fieldset class="campo">
						<label for="nombre">Nombre y Apellido</label>
						<input
							name="full_name"
							class="input-text"
							type="text"
							id="nombre"
							placeholder="Nombre Completo"
							value="<%= locals.old && old.full_name ? old.full_name : '' %>"
						/>
						<% if (locals.errores && errores.full_name) { %>
						<div class="text-danger"><%= errores.full_name.msg %></div>
						<% } %>
					</fieldset>
					<fieldset class="campo">
						<label for="dni">DNI</label>
						<input
							name="dni"
							class="input-text"
							type="number"
							id="dni"
							placeholder="DNI"
							value="<%= locals.old && old.dni ? old.dni : '' %>"
						/>
						<% if (locals.errores && errores.dni) { %>
						<div class="text-danger"><%= errores.dni.msg %></div>
						<% } %>
					</fieldset>
					<fieldset class="campo">
						<label for="email">Correo</label>
						<input
							name="email"
							class="input-text"
							type="email"
							id="email"
							placeholder="Email"
							value="<%= locals.old && old.email ? old.email : '' %>"
						/>
						<% if (locals.errores && errores.email) { %>
						<div class="text-danger"><%= errores.email.msg %></div>
						<% } %>
					</fieldset>
					<fieldset class="campo">
						<label for="pass1">Contrase単a</label>
						<input
							name="password"
							class="input-text"
							type="password"
							id="pass1"
							placeholder="Contrase単a"
						/>
						<% if (locals.errores && errores.password) { %>
						<div class="text-danger"><%= errores.password.msg %></div>
						<% } %>
					</fieldset>
					<fieldset class="campo">
						<label for="birth">Fecha de Nacimiento</label>
						<input
							name="date_of_birth"
							class="input-text"
							id="birth"
							type="date"
							value="<%= locals.old && old.date_of_birth ? old.date_of_birth : '' %>"
						/>
						<% if (locals.errores && errores.date_of_birth) { %>
						<div class="text-danger"><%= errores.date_of_birth.msg %></div>
						<% } %>
					</fieldset>
					<fieldset class="campo">
						<label for="pass2">Confirmar Contrase単a</label>
						<input
							name="password2"
							class="input-text"
							type="password"
							id="pass2"
							placeholder="Confirmar Contrase単a"
						/>
						<% if (locals.errores && errores.password2) { %>
						<div class="text-danger"><%= errores.password2.msg %></div>
						<% } %>
					</fieldset>
				</section>
				<!-- .contenedor-campos -->
				<input
					class="boton w-sm-100 alinear-centro flex"
					type="submit"
					value="Registrarse"
				/>
			</form>
		</main>
	</body>
</html>
