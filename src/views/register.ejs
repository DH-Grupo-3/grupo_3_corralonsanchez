<html lang="en">
	<head>
		<%- include('./partials/head') %>
		<link rel="stylesheet" href="/css/register.css">
	</head>
	<body class="body_registro">
		<!-- header -->
		<%- include('./partials/header') %>
		<main>
			<!-- <section> -->
				<% if (locals.errores) {
					errores.forEach(error => { %>
						<p><%= error.msg %></p>
				<% })
			} %>
				<form class="formulario" method="POST" action="/users/register">
					<legend>Formulario de Registro</legend>
					 <section class="contenedor-campos">
					
							<fieldset class="campo">
								<label for="nombre">Nombre y Apellido</label>
								<input
									name="full_name"
									class="input-text"
									type="text"
									id="nombre"
									placeholder="Nombre Completo"
									value="<%= locals.old && old.full_name ? old.full_name : '' %>"
								/>
							</fieldset>
							<fieldset class="campo">
								<label for="dni">DNI</label>
								<input
									name="dni"
									class="input-text"
									type="number"
									id="dni"
									placeholder="DNI"
									value="<%= locals.old && old.dni ? old.dni : '' %>"
								/>
							</fieldset>
							<fieldset class="campo">
								<label for="email">Correo</label>
								<input
									name="email"
									class="input-text"
									type="email"
									id="email"
									placeholder="Email"
									value="<%= locals.old && old.email ? old.email : '' %>"
								/>
							</fieldset>
							<fieldset class="campo">
								<label for="pass1">Contrase単a</label>
								<input
									name="password"
									class="input-text"
									type="password"
									id="pass1"
									placeholder="Contrase単a"
									
								/>
							</fieldset>
							<fieldset class="campo">
								<label for="birth">Fecha de Nacimiento</label>
								<input name="date_of_birth" class="input-text" id="birth" type="date" value="<%= locals.old && old.date_of_birth ? old.date_of_birth : '' %>" />
							</fieldset>
							<fieldset class="campo">
								<label for="pass2">Confirmar Contrase単a</label>
								<input
									name="password2"
									class="input-text"
									type="password"
									id="pass2"
									placeholder="Confirmar Contrase単a"
								/>
							</fieldset>
					    </section>
						<!-- .contenedor-campos -->
						<input class="boton w-sm-100 alinear-centro flex" type="submit" value="Registrarse" />
					
				</form>
		</main>
	</body>
</html>
