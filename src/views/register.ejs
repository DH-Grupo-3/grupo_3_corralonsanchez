<html lang="en">
	<head>
		<%- include('./partials/head') %>
	</head>
	<body class="body_registro">
		<header class="heading">
			<a href="#"><img class="logo" src="images/Logo corralon.png" alt="Logo" /></a>
			<h1 class="titulo">Corralon Sanchez</h1>
			<div class="buscador">
				<input
					class="buscador__input"
					type="search"
					id="search"
					name="search"
					placeholder="Buscar productos, marcas, etc."
				/>
				<button><img class="buscador__icono" src="images/search.png" alt="" /></button>
			</div>
			<div class="carrito-user">
				<a href="#">
					<img class="carrito" src="images/shopping-cart1.png" alt="icono_carrito"
				/></a>
				<a href="#"><img class="user" src="images/user1.png" alt="icono_user" /></a>
			</div>
		</header>
		<div class="nav-bg">
			<nav class="navegacion-principal contenedor">
				<a href="#">Productos</a>
				<a href="#">Ofertas</a>
				<a href="#">Ayuda</a>
				<a href="#">Contacto</a>
			</nav>
		</div>
		<main>
			<section>
				<form class="formulario">
					<fieldset>
						<legend>Formulario de Registro</legend>
						<div class="contenedor-campos">
							<div class="campo">
								<label for="nombre">Nombre y Apellido</label>
								<input
									class="input-text"
									type="text"
									id="nombre"
									placeholder="Nombre Completo"
								/>
							</div>
							<div class="campo">
								<label for="dni">DNI</label>
								<input
									class="input-text"
									type="number"
									id="dni"
									placeholder="DNI"
								/>
							</div>
							<div class="campo">
								<label for="email">Correo</label>
								<input
									class="input-text"
									type="email"
									id="email"
									placeholder="Email"
								/>
							</div>
							<div class="campo">
								<label for="pass1">Contrase単a</label>
								<input
									class="input-text"
									type="password"
									id="pass1"
									placeholder="Contrase単a"
								/>
							</div>
							<div class="campo">
								<label for="birth">Fecha de Nacimiento</label>
								<input class="input-text" id="birth" type="date" />
							</div>
							<div class="campo">
								<label for="pass2">Confirmar Contrase単a</label>
								<input
									class="input-text"
									type="password"
									id="pass2"
									placeholder="Confirmar Contrase単a"
								/>
							</div>
						</div>
						<!-- .contenedor-campos -->
						<div class="alinear-derecha flex">
							<input class="boton w-sm-100" type="submit" value="Registrarse" />
						</div>
					</fieldset>
				</form>
			</section>
		</main>
	</body>
</html>
